extends layout

block content
 h1=title
 p
    a(href="../view") View
 h2=message
 form(action="/update", method="post", role="form")
        .form-group
          label.col-xs-10.col-sm-2.control-label(for="firstName") First Name
          .col-xs-12.col-sm-10
            input#name.form-control(name="firstName", required, value="#{results.firstName}")
        .form-group
          label.col-xs-10.col-sm-2.control-label(for="lastName") Last Name
          .col-xs-12.col-sm-10
            input#name.form-control(name="lastName", required, value="#{results.lastName}")
        .form-group
          label.col-xs-10.col-sm-2.control-label(for="department") Department
          .col-xs-12.col-sm-10
            input#name.form-control(name="department", required, value="#{results.department}")
        .form-group
          label.col-xs-10.col-sm-2.control-label(for="jobTitle") Job Title
          .col-xs-12.col-sm-10
            input#name.form-control(name="jobTitle", required, value="#{results.jobTitle}")
        .form-group
          label.col-xs-10.col-sm-2.control-label(for="salary") Salary
          .col-xs-12.col-sm-10
            input#name.form-control(name="salary", type="Number", required, value="#{results.salary}")
        input(type="hidden" name="_id" value="#{results._id}")
        input(type="submit" value="Add Employee") 
